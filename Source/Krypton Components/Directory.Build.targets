<Project>
    <!-- For reference, not used
    <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.targets', '$(MSBuildThisFileDirectory)../../'))" />
    -->

    <PropertyGroup>
        <PackageId Condition="'$(TFMs)' == 'lite'">$(PackageId).Canary.Lite</PackageId>
        <Description Condition="'$(TFMs)' == 'lite'">
          An update to Component factory's krypton toolkit to support .NET Core 3.1, .NET 5, .NET 6, and .net 4.8 Framework. $(Description)

          This package supports only .NET Framework >= 4.8, .NET Core 3.1 and .NET 5/6.
          If you require .NET Framework 3.5 -> 4.7.2 support, or want to use library fully build against your specific framework version use non-lite package.
        </Description>
		<PackageId Condition="'$(TFMs)' == 'all'">$(PackageId).Canary</PackageId>
        <Description Condition="'$(TFMs)' == 'all'">
          An update to Component factory's krypton toolkit to support .NET Core 3.1, .NET 5/6 and the latest .NET 3.5/4.x framework. $(Description)
          
          This package supports all .NET Framework versions starting .NET 3.5, .NET Core 3.1 and .NET 5/6.
          Also, all libraries are included targeting each specific framework version for performance purposes.
          If you target only .NET Framework >= 4.5 and are not interested in specific framework version, consider using the lite package.
        </Description>
    </PropertyGroup>
</Project>