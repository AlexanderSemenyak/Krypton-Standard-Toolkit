<Project>
    <!-- For reference, not used
    <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.targets', '$(MSBuildThisFileDirectory)../../'))" />
    -->

    <!--Nightly NuGets only!!!!!!!!!!!-->
    <PropertyGroup>
      <!--For use with Nightly packages-->
      <!--REMINDER: When packing, use the proper ISO layout, i.e ddHH-->
      <CurrentDate>$([System.DateTime]::Now.ToString(ddHH))</CurrentDate>

      <NightlyMinorVersion>$([System.DateTime]::Now.ToString(yyMM)</NightlyMinorVersion>
      
      <NightlyBuildVersion>$([System.DateTime]::DayOfYear().ToString()</NightlyBuildVersion>

      <AssemblyVersion>6.2110.$(CurrentDate)</AssemblyVersion>
      <FileVersion>6.2110.$(CurrentDate)</FileVersion>
      <Version>6.$(NightlyMinorVersion).$(NightlyBuildVersion)</Version>
    </PropertyGroup>

    <!--<PropertyGroup>
      <AssemblyVersion>6.0.2110</AssemblyVersion>
      <FileVersion>6.0.2110</FileVersion>
    </PropertyGroup>-->

    <!--Handle AssemblyInfo-->
    <PropertyGroup>
      <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
